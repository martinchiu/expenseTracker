<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">修改這筆支出</h1>
      <form action="/records/{{ record._id }}?_method=PUT" method="POST">
        <div class="form-group mt-3">
          <label for="name"><span style="color: red;">*</span> Name</label>
          <input type="text" id="name" name="name" class="form-control mt-2" placeholder="Enter Name"
            value="{{ record.name }}" required>
        </div>
        <div class="form-group mt-3">
          <label for="Date"><span style="color: red;">*</span> Date</label>
          <input type="date" id="date" name="date" class="form-control mt-2" value="{{ record.date }}" required>
        </div>
        <div class="form-group mt-3">
          <label for="category"><span style="color: red;">*</span> Category</label>
          <select class="form-control mt-2" name="category" id="category" required>
            <option value="家居物業" {{#if (compared record.category "家居物業" )}}selected{{/if}}>家居物業</option>
            <option value="交通出行" {{#if (compared record.category "交通出行" )}}selected{{/if}}>交通出行</option>
            <option value="休閒娛樂" {{#if (compared record.category "休閒娛樂" )}}selected{{/if}}>休閒娛樂</option>
            <option value="餐飲食品" {{#if (compared record.category "餐飲食品" )}}selected{{/if}}>餐飲食品</option>
            <option value="其他" {{#if (compared record.category "其他" )}}selected{{/if}}>其他</option>
          </select>
        </div>
        <div class="form-group mt-3">
          <label for="amount"><span style="color: red;">*</span> Amount</label>
          <input type="number" id="amount" name="amount" class="form-control mt-2" placeholder="Enter Number"
            value="{{ record.amount }}" required>
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <button type="submit" class="btn btn-primary btn-block ">送出修改資料</button>
        </div>
      </form>
    </div>
  </div>
</div>