<div class=" col-12 mx-auto mt-5">
  {{!-- Sort --}}
  <div class="btn-group col-4 mx-auto d-flex justify-content-center">
    <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"
      aria-expanded="false">
      類別
    </button>
    <div class="dropdown-menu">
      <a class="dropdown-item" href="/">全部</a>
      <a class="dropdown-item" href="/家居物業">家居物業</a>
      <a class="dropdown-item" href="/交通出行">交通出行</a>
      <a class="dropdown-item" href="/休閒娛樂">休閒娛樂</a>
      <a class="dropdown-item" href="/餐飲食品">餐飲食品</a>
      <a class="dropdown-item" href="/其他">其他</a>
    </div>
  </div>
  {{!-- Amount --}}
  <div class="col-6 mx-auto d-flex justify-content-center mt-5">
    <h2 class="totalAmount ml-3">
      {{#if totalAmount}}
      總金額：$ {{ totalAmount }}
      {{else}}
      到目前為止還沒花錢呦
      {{/if}}
    </h2>
  </div>
  {{!-- Create --}}
  <div class="col-4 mt-2 d-flex justify-content-around">
    <a class="btn btn-outline-secondary" href="/records/new">新增支出</a>
  </div>
  {{!-- List --}}
  <div class="col-9 mx-auto mt-1">
    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item m-4 my-1" style="box-shadow: 3px 3px 2px rgba(0, 0, 0, 0.2); border-radius: 10px;">
        <div class="row">
          <div class="col-9 row align-items-center justify-content-around">
            <div class="col-2 text-center" style="font-size: 30px; ">
              <i class="{{this.icon}}"></i>
            </div>
            <div class="col-6 d-flex flex-column">
              <div>
                <h4>{{this.name}}</h4>
              </div>
              <div>{{this.date}}</div>
            </div>
            <div class="col-auto align-items-center">
              <h3>${{this.amount}}</h3>
            </div>
          </div>
          <div class="col-3 justify-content-evenly align-items-center" style="display: inline-flex;">
            <a href="/records/{{ this._id }}/edit">
              <button class="btn btn-success ">edit</button>
            </a>
            <form action="/records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
              <button class="btn btn-danger" type="submit">delete</button>
            </form>
          </div>
        </div>
        {{/each}}
    </ul>
  </div>
</div>