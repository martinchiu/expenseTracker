<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control mt-2" placeholder="Enter Email" value="{{ email }}">
        </div>
        <div class="form-group mt-2">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control mt-2" placeholder="Enter Password">
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </div>
        <div class="mt-2 d-flex justify-content-center">
          <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
        </div>
        <div class="mt-2 d-flex justify-content-center">
          <a href="/auth/google" class="btn btn-secondary btn-block">Google Login</a>
        </div>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>