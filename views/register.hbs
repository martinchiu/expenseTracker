<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      <form action="/users/register" method="POST">
        <div class="form-group mt-2">
          <label for="name"><span style="color: red;">*</span> Name</label>
          <input type="text" id="name" name="name" class="form-control mt-2" placeholder="Enter Name">
        </div>
        <div class="form-group mt-2">
          <label for="email"><span style="color: red;">*</span> Email</label>
          <input type="email" id="email" name="email" class="form-control mt-2" placeholder="Enter Email">
        </div>
        <div class="form-group mt-2">
          <label for="password"><span style="color: red;">*</span> Password</label>
          <input type="password" id="password" name="password" class="form-control mt-2" placeholder="Enter Password">
        </div>
        <div class="form-group mt-2">
          <label for="confirmPassword"><span style="color: red;">*</span> Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control mt-2"
            placeholder="Confirm Password">
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>
      </form>
      <p class="lead mt-4">
        Have An Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>